@model EShopAdminApplication.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order for user @Model.Owner.FirstName, @Model.Owner.UserName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Ticket id</th>
                    <th>Ticket price</th>
                    <th>Movie rating</th>
                    <th>Movie name</th>
                    <th>Movie description</th>
                

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ProductInOrders.Count() == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center"><b><i>No active Tickets</i></b></td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.ProductInOrders.Count(); i++)
                    {
                        var item = Model.ProductInOrders.ElementAt(i);
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderedProduct.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderedProduct.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderedProduct.Rating)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderedProduct.Movie.MovieName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderedProduct.Movie.MovieDescription)
                            </td>
                            </tr>
                    }
                }
            </tbody>
        </table>


    </dl>
</div>
